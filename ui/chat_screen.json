{
    "namespace": "chat",
    "messages_text": {
        "type": "panel",
        "size": [
            "100%",
            "100%c"
        ],
        "controls": [
            {
                "text": {
                    "type": "label",
                    "color": "$chat_text_color",
                    "localize": false,
                    "size": [
                        "100%",
                        "default"
                    ],
                    "text": "#text",
                    "text_tts": "#text_tts",
                    "font_type": "$chat_font_type",
                    "font_scale_factor": 0.9,
                    "line_padding": 5
                }
            }
        ],
        "bindings": [
            {
                "binding_name": "#chat_visible",
                "binding_name_override": "#visible"
            }
        ]
    }
}